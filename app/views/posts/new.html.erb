<% provide :title, "Create new post" %>

<h1 class="text-center">Create new post</h1>

<div class="new_post mt-4">
  <%= form_with model: @post, url: posts_path, method: :post, id: "form-new-post" do |f| %>
    <div class="mb-4">
      <input type="text" class="form-control" id="title-post" placeholder="Title">
    </div>
    <div class="mb-4 row">
      <div class="col-md-9">
        <input type="text" class="form-control flex-grow-1" id="tags-post" placeholder="Tags">
      </div>
      <div class="col-md-3 d-flex justify-content-between btn__action">
        <button class="btn btn-primary cover__image">Cover image</button>
        <button class="btn btn-primary" id="post-submit">Publish</button>
      </div>
    </div>
    <div class="mb-4">
      <div class="editor-markdown">
        <%= f.text_area :content, id: "editor", class: "form-control" %>
      </div>
    </div>
  <% end %>
</div>
