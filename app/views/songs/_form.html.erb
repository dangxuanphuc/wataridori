<%= form_for song, remote: true do |f| %>
  <% if song.persisted? %>
    <div class="form-group">
      <%= f.label :id, "ID" %>
      <%= f.text_field :id, class: "form-control", disabled: true %>
    </div>
  <% end %>
  <div class="form-group mt-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :author %>
    <%= f.text_field :author, class: "form-control", required: true %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :url %>
    <%= f.text_field :url, class: "form-control", required: true %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :cover %>
    <%= f.text_field :cover, class: "form-control", required: true %>
  </div>
  <%= f.submit "Save changes", class: "btn btn-primary mt-3" %>
<% end %>
